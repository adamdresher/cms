<div>
  <h2>This is the CMS Index!</h2>

  <form action="/new_doc" method="get">
    <button type="submit">New Document</button>
  </form>

  <ul>
    <% @files.each do |file| %>
      <li>
        <a href="<%= file %>" ><%= file %></a> - 
        <a href="/<%= file %>/edit">edit</a> - 
        <form style="display: inline" action="/<%= file %>/delete" method="post">
          <button type="submit">delete</button>
        </form>
      </li>
    <% end %>
  </ul>
</div>

<% if @user %>
  <div>
    <br>
    <p class="user_status">
      Signed in as <%= @user %>.
      <button form="signout" type="submit">Sign Out</button>
    </p>
  </div>
<% end %>

<form id="signout" style="display: inline" action="/users/signout" method="post">
</form>
